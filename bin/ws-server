#!/usr/bin/env php
<?php
error_reporting(E_ALL & ~E_DEPRECATED);

require __DIR__ . '/../vendor/autoload.php';

use Ratchet\Http\HttpServer;
use Ratchet\Server\IoServer;
use Ratchet\WebSocket\WsServer;
use Ratchet\ConnectionInterface;
use Ratchet\MessageComponentInterface;

use EgorNovikov\PhpSocket\WebSocket\Connection\ConnectionManager;
use EgorNovikov\PhpSocket\WebSocket\Domain\Message\MessageRouter;
use EgorNovikov\PhpSocket\WebSocket\Domain\Message\MessageFactory;
use EgorNovikov\PhpSocket\WebSocket\Router\RouterFactory;

class WebSocketHandler implements MessageComponentInterface
{
    private ConnectionManager $manager;
    private MessageRouter $router;

    public function __construct(ConnectionManager $manager, MessageRouter $router)
    {
        $this->manager = $manager;
        $this->router = $router;
    }

    public function onOpen(ConnectionInterface $conn): void
    {
        echo "New connection: {$conn->resourceId}\n";
        $this->manager->addConnection($conn);
    }

    public function onMessage(ConnectionInterface $from, $msg): void
    {
        $message = MessageFactory::createFromString($msg);
        $this->router->route($message, $from);
    }

    public function onClose(ConnectionInterface $conn): void
    {
        $user = $this->manager->removeConnection($conn);
        
        if ($user !== null) {
            $username = $user->getUsername();
            echo "User left: {$username}\n";
            
            // Уведомляем остальных о выходе пользователя
            $this->manager->broadcastToAll([
                'type' => 'user_left',
                'payload' => [
                    'username' => $username,
                    'users' => $this->manager->getOnlineUsernames(),
                    'time' => date('H:i:s')
                ]
            ]);
            
            // Добавляем в историю
            $this->manager->addToHistory($username, 'покинул чат', 'system');
        } else {
            echo "Connection closed: {$conn->resourceId}\n";
        }
    }

    public function onError(ConnectionInterface $conn, \Exception $e): void
    {
        echo "Error: {$e->getMessage()}\n";
        $this->manager->removeConnection($conn);
        $conn->close();
    }
}

$connectionManager = new ConnectionManager();
$router = RouterFactory::create($connectionManager);

$server = IoServer::factory(
    new HttpServer(
        new WsServer(
            new WebSocketHandler($connectionManager, $router)
        )
    ),
    8080 // Порт
);

echo "WebSocket server started on ws://localhost:8080\n";
$server->run();
